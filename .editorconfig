# To learn more about .editorconfig see https://aka.ms/editorconfigdocs

# All files
[*]
indent_style = space

# Xml files

# CA1304: Specify CultureInfo
dotnet_diagnostic.CA1304.severity = silent

# CA2000: Dispose objects before losing scope
dotnet_diagnostic.CA2000.severity = silent

# CA1305: Specify IFormatProvider
dotnet_diagnostic.CA1305.severity = silent

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = silent

# CA1822: Mark members as static
dotnet_diagnostic.CA1822.severity = silent

# CA5379: Do Not Use Weak Key Derivation Function Algorithm
dotnet_diagnostic.CA5379.severity = silent

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = silent

# CA2007: Consider calling ConfigureAwait on the awaited task
dotnet_diagnostic.CA2007.severity = silent

# IDE0058: Expression value is never used
csharp_style_unused_value_expression_statement_preference = discard_variable:silent

# CA1307: Specify StringComparison
dotnet_diagnostic.CA1307.severity = silent

# CA2100: Review SQL queries for security vulnerabilities
dotnet_diagnostic.CA2100.severity = silent

# CS0219: Variable is assigned but its value is never used
dotnet_diagnostic.CS0219.severity = silent

# CA1801: Review unused parameters
dotnet_diagnostic.CA1801.severity = silent

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = silent

# CS1998: Async method lacks 'await' operators and will run synchronously
dotnet_diagnostic.CS1998.severity = silent

# IDE0063: Use simple 'using' statement
csharp_prefer_simple_using_statement = true:silent

# IDE0059: Unnecessary assignment of a value
csharp_style_unused_value_assignment_preference = discard_variable:silent

# IDE0057: Use range operator
csharp_style_prefer_range_operator = true:silent

# IDE0044: Add readonly modifier
dotnet_style_readonly_field = true:silent

# IDE0032: Use auto property
dotnet_style_prefer_auto_properties = true:silent

# IDE0008: Use explicit type
csharp_style_var_elsewhere = false:silent

# IDE0008: Use explicit type
csharp_style_var_for_built_in_types = false:silent

# IDE0008: Use explicit type
csharp_style_var_when_type_is_apparent = false:silent

# IDE0017: Simplify object initialization
dotnet_style_object_initializer = true:silent

# IDE0060: Remove unused parameter
dotnet_code_quality_unused_parameters = all:silent

# IDE1006: Naming Styles
dotnet_diagnostic.IDE1006.severity = silent

[*.xml]
indent_size = 2
